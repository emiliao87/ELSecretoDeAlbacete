<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btPista"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btMaps"
        android:layout_alignBottom="@+id/btMaps"
        android:layout_centerHorizontal="true"
        android:text="Pista" />

    <Button
        android:id="@+id/btSiguiente"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btPista"
        android:layout_toRightOf="@+id/btPista"
        android:text="Seguir" />

    <Button
        android:id="@+id/btMaps"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_toLeftOf="@+id/btPista"
        android:text="Mapa" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Imagen del Lugar"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Un acertijo que sea medianamente largo y pueda caber en pantalla mÃ¡s o menos grande."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                android:typeface="serif" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
