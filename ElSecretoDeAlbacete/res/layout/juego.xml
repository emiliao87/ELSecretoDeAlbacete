<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Acertijo multilinea"
         >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btPista"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btMapa"
        android:layout_alignBottom="@+id/btMapa"
        android:layout_centerHorizontal="true"
        android:text="Pista" />

    <Button
        android:id="@+id/btSiguiente"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btPista"
        android:layout_toRightOf="@+id/btPista"
        android:text="Seguir" />

    <Button
        android:id="@+id/btMapa"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_toLeftOf="@+id/btPista"
        android:text="Mapa" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Imagen del Lugar"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
